<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_light_default"
    tools:context="daynight.daynnight.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:srcCompat="@android:color/transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/bungee"
                android:foregroundGravity="bottom"
                android:gravity="bottom"
                android:text="Record"
                android:textAlignment="center"
                android:textColor="@color/blanc"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/bungee"
                android:foregroundGravity="bottom"
                android:gravity="bottom"
                android:text="Pointage"
                android:textAlignment="center"
                android:textColor="@color/blanc"
                android:textSize="24sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:srcCompat="@android:color/transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bestScoreNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/bungee"
                android:foregroundGravity="center_vertical|center_horizontal|center"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="50"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="85sp" />

            <TextView
                android:id="@+id/scoreNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/bungee"
                android:foregroundGravity="center_vertical|center_horizontal|center"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="36"
                android:textColor="?attr/colorBackgroundFloating"
                android:textSize="85sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:srcCompat="@android:color/transparent" />

            <Button
                android:id="@+id/buttonRecommencer"
                android:layout_width="275dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:background="@drawable/style_button_ripple_coin"
                android:fontFamily="@font/bungee"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="REcommencer"
                android:textColor="@color/common_google_signin_btn_text_light_default"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:srcCompat="@android:color/transparent" />

            <Button
                android:id="@+id/buttonMenu"
                android:layout_width="275dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:background="@drawable/style_button_ripple_coin"
                android:fontFamily="@font/bungee"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="Menu"
                android:textColor="@color/common_google_signin_btn_text_light_default"
                android:textSize="24sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            app:srcCompat="@android:color/transparent" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
