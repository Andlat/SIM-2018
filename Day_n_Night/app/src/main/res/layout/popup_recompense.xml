<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_popup_informations_objet"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sa_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/bungee"
        android:gravity="bottom"
        android:text="@string/bravo"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/sa_volume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/bungee"
        android:gravity="top"
        android:text="Tu as gagnÃ©"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/sa_volume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />


    <TextView
        android:id="@+id/recompenseMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/bungee"
        android:text=" 30 Biscuits !"
        android:textAlignment="textStart"
        android:textColor="@android:color/holo_red_light"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/objet_biscuit"
        android:visibility="visible" />

    <Button
        android:id="@+id/ramasser"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/style_button_ripple_coin"
        android:fontFamily="@font/bungee"
        android:gravity="center_vertical|center_horizontal|center"
        android:text="Ramasser"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textSize="24sp" />

</android.support.v7.widget.LinearLayoutCompat>