<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/layout_popup_informations_objet"
    tools:context="daynight.daynnight.PopupNouveauJoueur">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:gravity="center"
        android:text="Nouveau joueur"
        android:fontFamily="@font/bungee"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textSize="24sp"/>

    <!-- Ligne de séparation -->
    <View
        android:layout_width="match_parent"
        android:layout_height="6dip"
        android:layout_gravity="fill"
        android:background="@color/beigeFonce" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <EditText
            android:id="@+id/prenom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:hint="Prénom"
            android:textSize="18sp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:hint="Nom"
            android:textSize="18sp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/adresseElectronique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:hint="Adresse électronique"
            android:textSize="18sp"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/confirmation"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/style_button_ripple_coin"
            android:fontFamily="@font/bungee"
            android:text="Confirmer"
            android:textColor="@color/common_google_signin_btn_text_light_default"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
