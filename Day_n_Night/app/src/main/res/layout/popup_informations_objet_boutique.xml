<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="14dp"
    android:orientation="vertical"
    tools:context="daynight.daynnight.PopupInformationsObjet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Nomnomnomnomnomnomnom"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="000"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/boutonBoutique"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/objet_biscuit" />
        </LinearLayout>
    </LinearLayout>

    <!--Outil-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="L'Ornithorynque (Ornithorhynchus anatinus) est un animal semi-aquatique endémique de l'est de l'Australie, y compris la Tasmanie. C'est l'une des cinq espèces de l'ordre des monotrèmes, seul ordre de mammifères qui pond des œufs." />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/layout_objet"
            android:padding="5dp"
            android:src="@drawable/objet_outil_seau_deau" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/caracteristiquesOutil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/portee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Portée : "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nbCibles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de cibles : "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/toucherParCoup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de tagues par coup : "
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="10dp"
            android:layout_alignBottom="@id/caracteristiquesOutil"
            android:layout_alignParentEnd="true">

            <Button
                android:id="@+id/fermerHorizontale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/style_button_ripple"
                android:text="Fermer"
                android:visibility="visible" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:padding="10dp"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/boutiqueAcheter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Button" />

        <Button
            android:id="@+id/fermerVerticale"
            android:background="@drawable/style_button_ripple"
            android:layout_toEndOf="@id/boutiqueAcheter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:text="Fermer" />
    </RelativeLayout>

</LinearLayout>