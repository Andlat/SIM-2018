<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/layout_badge"
        android:padding="1dp"
        android:contentDescription="@string/logo_du_badge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/locationCapture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location_capture"
            android:gravity="center"
            android:textColor="@color/noir"
            android:textSize="16sp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateCapture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_capture"
                android:textColor="@color/noir"
                android:textStyle="bold"
                android:textSize="12sp" />

            <View
                android:layout_width="3dip"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/beigeFonce2" />

            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/type_de_badge"
                android:textColor="@color/noir"
                android:textStyle="bold"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
