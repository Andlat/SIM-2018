<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beigeTRESpale"
    android:padding="@dimen/activity_padding"
    tools:context="daynight.daynnight.CreateAccountActivity">

    <TextView
        android:id="@+id/caa_description"
        android:layout_width="313dp"
        android:layout_height="86dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/bungee"
        android:forceHasOverlappingRendering="true"
        android:text="@string/caa_desc"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/description_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/caa_enter_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.822" />

    <EditText
        android:id="@+id/caa_enter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="bungee"
        android:hint="@string/caa_name"
        android:textAlignment="center"
        android:textSize="@dimen/default_button_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="65dp" />

    <Button
        android:id="@+id/boutonOk"
        android:layout_width="134dp"
        android:layout_height="55dp"
        android:background="@drawable/style_button_ripple_coin"
        android:fontFamily="@font/bungee"
        android:text="@string/ok"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caa_enter_name" />

</android.support.constraint.ConstraintLayout>
