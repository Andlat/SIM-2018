<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_popup_informations_objet"
    android:padding="@dimen/activity_padding"
    tools:context="daynight.daynnight.SettingsActivity">

    <TextView
        android:id="@+id/sa_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/bungee"
        android:text="@string/sa_title"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMusic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/style_button_ripple_coin"
        android:text="@string/musique"
        android:drawableEnd="@drawable/ic_music_note_24dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sa_title"
        app:layout_constraintBottom_toTopOf="@+id/sa_title2" />

    <TextView
        android:id="@+id/sa_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="@string/langue"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonMusic"
        app:layout_constraintBottom_toTopOf="@+id/buttonRecommencer" />


    <LinearLayout
        android:id="@+id/lang_cont"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sa_title2">

        <Button
            android:id="@+id/buttonFrancais"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_button_ripple_coin"
            android:fontFamily="@font/bungee"
            android:text="@string/fran_ais"
            android:textColor="@color/common_google_signin_btn_text_light_default" />

        <Button
            android:id="@+id/buttonAnglais"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_button_ripple_coin"
            android:fontFamily="@font/bungee"
            android:text="@string/english"
            android:textColor="@color/common_google_signin_btn_text_light_default" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonRecommencer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/style_button_ripple_coin"
        android:text="@string/effacer_partie"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lang_cont"
        app:layout_constraintBottom_toTopOf="@+id/buttonOK"/>

    <Button
        android:id="@+id/buttonOK"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/style_button_ripple_coin"
        android:fontFamily="@font/bungee"
        android:text="@string/ok"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
