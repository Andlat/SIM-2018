<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="daynight.daynnight.SettingsActivity"
    android:padding="@dimen/activity_padding">

    <TextView
        android:id="@+id/sa_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sa_title"
        android:textSize="@dimen/description_text_size"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sa_volume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/sa_volume"
        android:layout_width="@dimen/sa_option_width"
        android:layout_height="wrap_content"
        android:text="@string/sa_volume"
        android:textSize="@dimen/default_button_text_size"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:drawableEnd="@drawable/ic_volume_up_24dp"
        android:background="@drawable/black_border"
        android:padding="@dimen/border_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sa_title"
        app:layout_constraintBottom_toTopOf="@+id/sa_music"/>

    <TextView
        android:id="@+id/sa_music"
        android:layout_width="@dimen/sa_option_width"
        android:layout_height="wrap_content"
        android:text="@string/sa_music"
        android:textSize="@dimen/default_button_text_size"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:drawableEnd="@drawable/ic_music_note_24dp"
        android:background="@drawable/black_border"
        android:padding="@dimen/border_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sa_volume"
        app:layout_constraintBottom_toTopOf="@+id/sa_avatar"/>

    <TextView
        android:id="@+id/sa_avatar"
        android:layout_width="@dimen/sa_option_width"
        android:layout_height="wrap_content"
        android:text="@string/sa_character"
        android:textSize="@dimen/default_button_text_size"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:background="@drawable/black_border"
        android:padding="@dimen/border_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sa_music"
        app:layout_constraintBottom_toTopOf="@+id/sa_language"/>

    <TextView
        android:id="@+id/sa_language"
        android:layout_width="@dimen/sa_option_width"
        android:layout_height="wrap_content"
        android:text="@string/sa_language"
        android:textSize="@dimen/default_button_text_size"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:background="@drawable/black_border"
        android:padding="@dimen/border_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sa_avatar"
        app:layout_constraintBottom_toTopOf="@+id/buttonOK"/>

    <Button
        android:id="@+id/buttonOK"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:background="@drawable/oval_button_shape"
        app:layout_constraintTop_toBottomOf="@+id/sa_language"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/black_border"
        android:padding="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="125dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Langue"
                android:textColor="@color/black"
                android:textSize="@dimen/description_text_size"
                android:textAlignment="center"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anglais"
                android:textColor="@color/black"
                android:textSize="@dimen/default_button_text_size"
                android:textAlignment="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@drawable/black_line"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FranÃ§ais"
                android:textColor="@color/black"
                android:textSize="@dimen/default_button_text_size"
                android:textAlignment="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@drawable/black_line"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Espagnol"
                android:textColor="@color/black"
                android:textSize="@dimen/default_button_text_size"
                android:textAlignment="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@drawable/black_line"/>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
