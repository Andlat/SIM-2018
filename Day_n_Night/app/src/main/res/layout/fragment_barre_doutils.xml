<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    tools:context="daynight.daynnight.BarreDOutils">

    <daynight.daynnight.ImageViewCarre
        android:id="@+id/outil0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/layout_objet"/>
    <daynight.daynnight.ImageViewCarre
        android:id="@+id/outil1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/layout_objet"/>
    <daynight.daynnight.ImageViewCarre
        android:id="@+id/outil2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/layout_objet"/>
    <daynight.daynnight.ImageViewCarre
        android:id="@+id/outil3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/layout_objet"/>
    <daynight.daynnight.ImageViewCarre
        android:id="@+id/plusMoins"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/layout_objet"/>
</LinearLayout>